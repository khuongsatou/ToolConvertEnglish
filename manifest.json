{
  "name": "English Extentison 1",
  "version": "1.1",
  "description": "Đây là tiện ích mở rộng đầu tiên của tôi",
  "permissions": ["tabs","activeTab", "storage","https://www.facebook.com/*"],
  "content_scripts" : [
    {
      "matches" : ["https://www.facebook.com/*"],
      "js" : ["content.js"],
      "css" :["content.css"]
    }
  ]
  ,
  "browser_action": {
      "default_title": "My Extentison",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}
